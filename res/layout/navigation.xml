<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/detail_bgColor" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/whites" >

        <RelativeLayout
            android:id="@+id/relative_waimai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_takeaway"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_waimai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="找外卖"
                android:textColor="@color/dark_grey"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_order"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_diancai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="找餐厅"
                android:textColor="@color/dark_grey"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_group"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_qiye" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="工作餐"
                android:textColor="@color/dark_grey"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_shipu"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_shipu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="食谱"
                android:textColor="@color/dark_grey"
                android:textSize="12.0sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nav_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="吃货相册"
                android:textColor="@color/dark_grey"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/whites">
    
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >

	        <RelativeLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:gravity="center_vertical" >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="手机买单"
	                android:textSize="16sp"
	                android:textStyle="bold"
	                android:textColor="@color/orange"
	                android:layout_marginTop="10dp"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="美食折上再减20元"
	                android:textSize="10sp"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="10dp"/>
	            <ImageView 
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:background="@drawable/ad_phone_order"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        
	        <View
		        android:layout_width="0.5dp"
		        android:layout_height="match_parent"
		        android:background="@color/line"
		        android:layout_gravity="center_horizontal" />
	
	        <RelativeLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:gravity="center_vertical" >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="和风日料季"
	                android:textSize="16sp"
	                android:textColor="@color/green"
	                android:textStyle="bold"
	                android:layout_marginTop="10dp"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="大师吐血推荐"
	                android:textSize="10sp"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="10dp"/>
	            <ImageView 
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:background="@drawable/ad_hefeng"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
       
         </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:background="@color/whites">
 
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >

	        <RelativeLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:gravity="center_vertical" >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="复仇者归来"
	                android:textSize="16sp"
	                android:textColor="@color/sky_blue"
	                android:textStyle="bold"
	                android:layout_marginTop="10dp"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="超前选座看大片"
	                android:textSize="10sp"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="10dp"/>
	            <ImageView 
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:background="@drawable/ad_fuchou"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        
	        <View
		        android:layout_width="0.5dp"
		        android:layout_height="match_parent"
		        android:background="@color/line"
		        android:layout_gravity="center_horizontal" />
	
	        <RelativeLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:gravity="center_vertical" >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="5折住酒店"
	                android:textSize="16sp"
	                android:textColor="@color/zhuhong"
	                android:textStyle="bold"
	                android:layout_marginTop="10dp"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="酒店更省更好定"
	                android:textSize="10sp"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="10dp"/>
	            <ImageView 
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:background="@drawable/ad_hotel"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
       
         </LinearLayout>
    </LinearLayout>

</LinearLayout>